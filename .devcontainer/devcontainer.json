{
    "name": "Odoo-Docker-Compose",
    "dockerComposeFile": ["docker-compose.yaml"],
    "service": "odoo",
    "workspaceFolder": "/workspaces/devcontainer",
    "runServices": ["odoo"],
    "forwardPorts": [8069, 8072, 5678, 5432],
    "portsAttributes": {
        "8069": {
            "label": "Odoo Web",
            "onAutoForward": "ignore" // Evita que VS Code cree un segundo mapeo din√°mico
        },
        "8072": {
            "label": "Odoo Chat/Longpolling",
            "onAutoForward": "ignore"
        },
        "5678": {
            "label": "Debugpy",
            "onAutoForward": "ignore"
        }
    },
    // MUY IMPORTANTE:
    "updateRemoteUserUID": true,
    "customizations": {
        "vscode": {
            "settings": {
                "python.languageServer": "None",
                // "python.analysis.typeCheckingMode": "strict",
                // Indicamos que use el pyproject.toml
                "pyright.disableLanguageServices": false,
                "python.analysis.persistIndex": true,
                "pyright.projectRoot": ".",
                "python.analysis.stubPath": "/workspaces/devcontainer/stubs",
                "python.analysis.extraPaths": [
                    "/usr/lib/python3/dist-packages/odoo",
                    "/workspaces/devcontainer/odoo",
                    "/workspaces/devcontainer/odoo/addons",
                    "/workspaces/devcontainer/local_addons",
                    "/workspaces/devcontainer/enterprise",
                    "/workspaces/devcontainer/oca",
                    "/workspaces/devcontainer/extra_addons"
                ],
                "editor.defaultFormatter": "charliermarsh.ruff",
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll.ruff": "always",
                    "source.organizeImports.ruff": "always"
                }
            },
            "extensions": [
                "ms-python.python",
                "ms-pyright.pyright",
                "charliermarsh.ruff",
                "mtxr.sqltools-driver-pg",
                "ms-python.debugpy",
                "mvintg.odoo-file",
                "Odoo.owl-vision",
                "trinhanhngoc.vscode-odoo"
            ]
        }
    },
    "postCreateCommand": "pip install ruff pyright pre-commit debugpy pydevd-odoo",
    "remoteUser": "odoo"
}